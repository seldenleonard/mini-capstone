<h1>Edit Product</h1>

<form action="/products/ <%=@product.id%>" method="post">
  <input type="hidden" name="_method" value="patch">
  <div>Name: <input type="text" name="name" value="<%= @product.name %>"></div>
  <div>Price: <input type="text" name="price" value="<%= @product.price %>%"></div>
  <div>Inventory: <input type="text" name="inventory" value="<%= @product.inventory %>"></div>
  <div>Supplier ID: <input type="text" name="supplier_id" value="<%= @product.supplier_id %>"></div>
  <input type="submit" value="Update Recipe"/>
</form>